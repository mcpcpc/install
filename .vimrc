set nocp noeb nosol wmnu lz tf
filetype plugin indent on
syntax on
set mouse=a
set rnu nu
set ww=h,l
set ts=4 sts=4 sw=4 bs=2 sr ai
set com=b:#,:%,n:>
set pt=<F2> cb=unnamed,unnamedplus
set list lcs=tab:»·,trail:·
set nobk nowb noswf
set hls is scs ic
set encoding=utf8
set sb spr
set pa+=**
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
autocmd FileType markdown,text setlocal spell
